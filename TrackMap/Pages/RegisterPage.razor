@page "/register"

@using YANLib

@if (ShowErrors)
{
    <div class="alert alert-danger">
        @if (Errors.IsEmptyOrNull())
        {
            <p>Not responding</p>
        }
        else
        {
            @foreach (var error in Errors)
            {
                <p>@error</p>
            }
        }
    </div>
}
<div class="d-flex justify-content-center text-center">
    <div class="card w-25">
        <div class="card-body">
            <h5 class="card-title">Register</h5>

            <EditForm Model="Register" OnValidSubmit="HandleRegister">
                <DataAnnotationsValidator />

                <div class="mb-3 mt-4">
                    <InputText id="username" class="form-control text-center" placeholder="Enter username..." @bind-Value="Register.UserName" />
                </div>

                <div class="mb-3">
                    <InputText id="password" class="form-control text-center" placeholder="Enter password..." type="password" @bind-Value="Register.Password" />
                </div>

                <div class="mb-3">
                    <InputText id="password" class="form-control text-center" placeholder="Confirm password..." type="password" @bind-Value="Register.ConfirmPassword" />
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <div class="w-100">
                        <button type="submit" class="btn btn-primary w-100">Register</button>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</div>
