@page "/login"

@if (ShowErrors)
{
    <div class="alert alert-danger">
        <p>@Error</p>
    </div>
}
<div class="d-flex justify-content-center text-center">
    <div class="card w-25">
        <div class="card-body">
            <h5 class="card-title">Login</h5>

            <EditForm Model="Login" OnValidSubmit="HandleLogin">
                <DataAnnotationsValidator />

                <div class="mb-3 mt-4">
                    <InputText id="username" class="form-control text-center" placeholder="Enter username..." @bind-Value="Login.UserName" />
                </div>

                <div class="mb-3">
                    <InputText id="password" class="form-control text-center" placeholder="Enter password..." type="password" @bind-Value="Login.Password" />
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <div class="w-100">
                        <div class="row">
                            <div class="col">
                                <button type="submit" class="btn btn-success w-100">Login</button>
                            </div>
                            <div class="col">
                                <a href="/register" class="btn btn-primary w-100">Register</a>
                            </div>
                        </div>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</div>
